<div class="row-fluid">
	<div class="span6">
			<h1>Contact</h1>

		<p>
		  <b>Name</b><br>
		  <%= @contact.name %>
		</p>

		<p>
		  <b>Title</b><br>
		  <%= @contact.title %>
		</p>

		<p>
		  <b>Company</b><br>
		  <%= @contact.company %>
		</p>

		<p>
		  <b>Phone</b><br>
		  <%= @contact.phone %>
		</p>

		<p>
		  <b>Email</b><br>
		  <%= @contact.email %>
		</p>

		<p>
		  <b>Notes</b><br>
		  <%= @contact.notes %>
		</p>
		<div class="form-actions">
		  <%= link_to 'Back', contacts_path, :class => 'btn'  %>
		  <%= link_to 'Edit', edit_contact_path(@contact), :class => 'btn' %>
		  <%= link_to 'Delete', contact_path(@contact), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
		</div>
	</div>

	<div class="span6">
		<h1>Tasks</h1>
		<%= render 'tasks/task' %>
		<br><br>
		<h1>Leads</h1>
		<%= render 'leads/lead' %>
	</div>

</div>
