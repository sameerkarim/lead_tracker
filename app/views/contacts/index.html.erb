<h1>Contacts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
			<th>Company</th>
			<th style="text-align:center">Tasks</th>
			<th style="text-align:center">Leads</th>
			<th style="text-align:center">Time since last contact</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to contact.name, contact_path(contact) %></td>
        <td><%= contact.title %></td>
				<td><%= contact.company %></td>
				<td style="text-align:center"><%= link_to contact.tasks.count, tasks_path %></td>
				<td style="text-align:center"><%= link_to contact.leads.count, leads_path %></td>
				<% if contact.contact_activities.empty? %>
				<td style="text-align:center">Never</td>
				<% else %>
				<td style="text-align:center"><%= custom_time_ago_in_words(contact.contact_activities.last.activity_date) %></td>
				<% end %>
        <td>
          <%= link_to 'Edit', edit_contact_path(contact), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', contact_path(contact), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_contact_path, :class => 'btn btn-primary' %>
