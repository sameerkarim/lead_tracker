<table class="table table-striped">
  <thead>
    <tr>
			<th>Contact</th>
      <th>Task title</th>
      <th>Description</th>
			<th>Priority</th>
			<th>Actions</th>
    </tr>
  </thead>
  <tbody>
	  <tbody>
	    <% @contacts.each do |contact| %>
				<tr>
					<td><h4><%= link_to contact.name, contact_path(contact) %></h4></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
				</tr>
					<% contact.tasks.each do |task| %>
	        <tr>
					<td></td>
					<td><%= link_to task.title, contact_task_path(task.contact, task) %></td>
					<td><%= task.description %></td>
					<td><%= task.priority %></td>
	        <td>
	          <%= link_to 'Edit', edit_contact_task_path(task.contact, task), :class => 'btn btn-mini' %>
	          <%= link_to 'Delete', [task.contact, task], 
																	:confirm => 'Are you sure?', :method => :delete, 
																	:class => 'btn btn-mini btn-danger' %>
	        </td>
	      </tr>
					<% end %>
	    <% end %>
	  </tbody>
	</table>