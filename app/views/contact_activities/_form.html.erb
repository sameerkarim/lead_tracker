<%= form_for ([@contact, @contact_activity]), :html => { :class => 'form-horizontal' } do |f| %>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> Contact Activity</legend>

    <div class="control-group">
      <%= f.label :activity_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :activity_date, :class => 'text_field' %>
      </div>
    </div>

     <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area', :rows => '4' %>
      </div>
    </div>

   <div class="form-actions">
      <%= f.submit nil , :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', contacts_path, :class => 'btn' %>
    </div>

  </fieldset>
<% end %>